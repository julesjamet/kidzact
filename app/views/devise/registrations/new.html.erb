<div class="d-flex align-items-center register-photo" >
  <div class="form-container">
    <div class="image-holder" style="background: url(<%= asset_path "fun.jpg"%>) center / cover no-repeat;">
    </div>
    <%# <form method="post"> %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
      <h2 class="text-center">Cr√©er un compte.</h2>
      <div class="form-group">
      <%= f.input :email,
      required: true,
      autofocus: true,
      label: false,
      input_html: { autocomplete: "email", placeholder: "Email" }%>
      </div>

      <div class="form-group">
      <%= f.input :password,
      required: true,
      label: false,
      # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
      input_html: { autocomplete: "new-password", placeholder:"Mot de passe" } %>
      </div>

      <div class="form-group">
      <%= f.input :password_confirmation,
      required: true,
      label: false,
      input_html: { autocomplete: "new-password", placeholder: "Confirmer mot de passe" } %>
      </div>
                  
      <div class="form-group">
      <%= f.button :submit, "S'inscrire", class: "btn btn-primary btn-block" , style:"background: #007bff;" %>
      </div>
      <%= render "devise/shared/links" %>
      <%= link_to "Retour vers la page d'accueil", root_path, class: "already" %>
    <% end %>
    <%# </form> %>
  </div>  
</div>
