<div class="d-flex align-items-center login-clean" >
  <form method="post">
    <h2 class="sr-only">Login Form</h2>
    <div class="illustration">
      <i class="far fa-smile-wink" style="color: #007bff;"></i>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.input :email,
        required: false,
        autofocus: true,
        label: false,
        input_html: { autocomplete: "email", placeholder: "Email" } %>
    </div>
            
    <div class="form-group">
      <%= f.input :password,
        required: false,
        label: false,
        input_html: { autocomplete: "current-password", placeholder: "Mot de passe" } %>
        <%= f.input :remember_me,
        as: :boolean if devise_mapping.rememberable? %>
    </div>
            
    <div class="form-group">
      <%= f.button :submit, "Se connecter", class:"btn btn-primary btn-block", style: "background: #007bff;" %>
    </div>
    <%= render "devise/shared/links" %>
    <%= link_to "Retour vers la page d'accueil", root_path, class: "forgot" %>
    <% end %>
  </form>
</div>
